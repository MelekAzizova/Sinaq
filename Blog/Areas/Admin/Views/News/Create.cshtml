@model NewsCreateVM
@{
    ViewData["Title"] = "Create";
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" placeholder="Enter  title">
        <span asp-validation-for=Title  class="form-text text-muted"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" placeholder="Enter  description">
        <span asp-validation-for=Description class="form-text text-muted"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input class="form-control" asp-for="Image" placeholder="Enter  PHOTO">
        <span asp-validation-for=Image class="form-text text-muted"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

