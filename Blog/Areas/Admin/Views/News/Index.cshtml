@model List<NewsListItemVM>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">News</h6>
        <a href="~/Admin/News/Create" class="btn btn-outline-primary">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th colspan="2" class="text-center">Action</th>
                        
                    </tr>
                </thead>
                    @foreach(var item in Model)
                    {
                <tbody>


                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td><img width="100px" src="~/@item.Image" /></td>
                        <td><a class="btn btn-success" asp-controller="News" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                        <td><a class="btn btn-success" asp-controller="News" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>

                </tbody>
                    }

            </table>
        </div>
    </div>
</div>


