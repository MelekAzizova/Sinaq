@model List<InstructorListItemVM>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Instructor</h6>
        <a href="~/Admin/Instructor/Create" class="btn btn-primary">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Name</th>
                        <th class="text-center">Position</th>
                        <th class="text-center">Image</th>
                        <th colspan="2" class="text-center">Actions</th>

                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                    <td class="text-center">@item.Id</td>
                    <td class="text-center">@item.Name</td>
                    <td class="text-center">@item.Positions.Name</td>
                    <td class="text-center"><img width="100px" src="~/@item.Image" /></td>

                    <td class="text-center"><a asp-action="Update" asp-controller="Instructor" asp-route-id="@item.Id" class="btn btn-primary">Update</a></td>
                    <td class="text-center"><a asp-action="Delete" asp-controller="Instructor" asp-route-id="@item.Id" class="btn btn-primary">Delete</a></td>
                    </tbody>
                }

            </table>
        </div>
    </div>
</div>

