@model List<TeamListItemVM>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Team</h6>
        <a href="~/Admin/Team/Create" class="btn btn-primary">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Position</th>
                        <th>Image</th>
                        <th colspan="2" class="text-center">Actions</th>
                        
                    </tr>
                </thead>
                @foreach(var item in Model)
                {
                    <tbody>
                        <td>@item.Id</td>
                        <td>@item.Position</td>
                        <td><img width="100px" src="~/@item.Image" /></td>
                        <td class="text-center"><a class="btn btn-outline-success" asp-action="Update" asp-controller="Team" asp-route-id="@item.Id">Update</a></td>
                    <td class="text-center"><a class="btn btn-outline-success" asp-action="Delete" asp-controller="Team" asp-route-id="@item.Id">Delete</a></td>

                    </tbody>
                }
            </table>
        </div>
    </div>
</div>

